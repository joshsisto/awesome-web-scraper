# Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Database Configuration
MONGODB_URL=mongodb://scraper:scraper_pass@localhost:27017/scraper
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=scraper.log

# Proxy Settings
DEFAULT_PROXY_POOL=default
PROXY_ROTATION_STRATEGY=health_based
MAX_PROXY_RETRIES=3

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RATE_LIMIT=100

# VPN Configuration (Optional - Private Internet Access)
# Get these from your PIA account
PIA_USERNAME=your_pia_username
PIA_PASSWORD=your_pia_password
VPN_AUTO_CONNECT=true
VPN_PREFERRED_COUNTRIES=US,UK,DE,CA,AU
VPN_ROTATION_INTERVAL=3600

# Anti-Detection Settings
USE_STEALTH_MODE=true
HUMAN_LIKE_DELAYS=true
USER_AGENT_ROTATION=true
MIN_REQUEST_DELAY=1
MAX_REQUEST_DELAY=5
RANDOMIZE_DELAYS=true

# Monitoring and Metrics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_COLLECTION_INTERVAL=60

# Security Settings
ENABLE_SSL_VERIFICATION=true
COOKIE_SECURITY=true
SANITIZE_INPUTS=true

# Browser Automation Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Storage Settings
STORAGE_TYPE=mongodb
STORAGE_TTL=2592000  # 30 days
CACHE_TYPE=redis
CACHE_TTL=3600  # 1 hour

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
TESTING_MODE=false